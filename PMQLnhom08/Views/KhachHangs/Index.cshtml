@model IEnumerable<PMQLnhom08.Models.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách khách hàng</h2>

<p>
    @Html.ActionLink("Tạo mới danh sách", "Create")
</p>
<table class="table">
    <tr>

        <th>
            <label>Tên khách hàng</label>
        </th>
        <th>
            <label>Địa chỉ</label>
        </th>
        <th>
            <label>Số điện thoại</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NameKH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AddressKH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SDT)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.NameKH }) |
        @Html.ActionLink("Details", "Details", new { id = item.AddressKH }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.SDT })
    </td>
</tr>
}

</table>
